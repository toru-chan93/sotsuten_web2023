{
    "editor.tabSize": 2,

    // styleint用の記述
    "stylelint.validate": ["css", "scss"],
    "scss.validate": false,
    "css.validate": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    },
    // Prettier併用の場合
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
}
